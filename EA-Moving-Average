//---------------------------------------------------------------------+
//|  INPUT VARIABLE                                  |
//+------------------------------------------------------------------+
input int InpFastPeriod = 14;  //fast period
input int InpSlowPeriod = 21;  //slow period


//---------------------------------------------------------------------+
//|  INPUT GLOBAL VARIABLE                                  |
//+------------------------------------------------------------------+

int fastHandle;
int slowHandle;

//+------------------------------------------------------------------+
//| Expert initialization function                                   |
//+------------------------------------------------------------------+
int OnInit(){

   // check user input
        
   if(InpFastPeriod <= 0){ 
      Alert("fast period <= 0");
       return INIT_PARAMETERS_INCORRECT;
      }    
      if(InpSlowPeriod <= 0){ 
       Alert("Slow Period <= 0");
       return INIT_PARAMETERS_INCORRECT;
       }
      if(InpFastPeriod >= InpSlowPeriod){ 
        Alert("fast period >= Slow Period");
        return INIT_PARAMETERS_INCORRECT;
        
      }  
      
     //CREATING A HANDLE
      
     fastHandle = iMA(_Symbol.PERIOD_CURRUNT,InpFastPeriod,0,MODE_EMA,PRICE_CLOSE);
     if(fastHandle == INVALID_HANDLE){
         Alert("failed to create fast Handle");
         return INT_FAILED;
}
      
   return(INIT_SUCCEEDED);
 }
  
//+------------------------------------------------------------------+
//| Expert deinitialization function                                 |
//+------------------------------------------------------------------+

void OnDeinit(const int reason)
  {
 
   
  }
//+------------------------------------------------------------------+
//| Expert tick function                                             |
//+------------------------------------------------------------------+

void OnTick()
  {
 
   
  }
  
